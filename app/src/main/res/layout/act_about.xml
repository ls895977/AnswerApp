<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@color/app_color">
        <ImageView
            android:id="@+id/about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:src="@mipmap/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dip_10"
            android:text="关于得分王"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_80"
        android:src="@mipmap/icon_logintitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dip_20"
        android:background="@drawable/tv_about"
        android:paddingBottom="@dimen/dip_5"
        android:paddingLeft="@dimen/dip_20"
        android:paddingRight="@dimen/dip_20"
        android:paddingTop="@dimen/dip_5"
        android:text="V1.0.01"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dip_20"
        android:text="答题器，单选题，多选题，即时反馈，高效教学，趣味抢答，营造课堂学习氛围，提高学生学习兴趣，二维码快速分享课堂互动报告，让教学成果清晰可见！"
        android:textColor="#818181"
        android:textSize="@dimen/fond_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dip_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_40"
            android:src="@mipmap/icon_guanyu_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dip_10"
            android:text="客服电话"
            android:textSize="@dimen/fond_20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400-010-0000"
            android:textColor="#f07935"
            android:textSize="@dimen/fond_18sp" />
    </LinearLayout>
</LinearLayout>
