<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@color/app_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dip_10"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_60"
        android:src="@mipmap/icon_logintitle" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_60"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="@dimen/dip_10"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_register"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="111"
            android:background="@null" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_registeryanzhen"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_8"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/register_pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="设置登录密码"
        android:padding="@dimen/dip_10"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_14sp" />

    <EditText
        android:id="@+id/register_pwd2"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="再次输入密码"
        android:padding="@dimen/dip_10"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_10">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textSize="@dimen/fond_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得分王用户协议"
            android:textColor="#35a0ff"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/bt_login"
        android:gravity="center"
        android:padding="@dimen/dip_10"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_14sp" />

</LinearLayout>
