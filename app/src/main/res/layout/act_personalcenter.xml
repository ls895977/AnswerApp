<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/personalcenter_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dip_10"
            android:textSize="@dimen/fond_16sp"
            android:paddingBottom="@dimen/dip_10"
            android:text="个人资料"
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/nickname1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dip_5">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dip_10"
    android:text="更新头像"
    android:textSize="@dimen/fond_16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_image"
    android:layout_width="@dimen/dip_40"
    android:layout_height="@dimen/dip_40"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/dip_5"
    android:src="@mipmap/icon_gerenhader" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/nickname2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dip_1"
    android:background="@color/white">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dip_10"
    android:text="用户名"
    android:textSize="@dimen/fond_16sp" />

    <TextView
    android:id="@+id/personalcenter_nickName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/dip_10"
    android:gravity="center_vertical"
    android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/personalcenter_sex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dip_1"
    android:background="@color/white">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dip_10"
    android:text="性别"
    android:textSize="@dimen/fond_16sp" />

    <TextView
    android:id="@+id/personalcenter_sextv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/dip_10"
    android:gravity="center_vertical"
    android:text="男"
    android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/personalcenter_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dip_5"
    android:background="@color/white">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dip_10"
    android:text="出生年月"
    android:textSize="@dimen/fond_16sp" />

    <TextView
    android:id="@+id/personalcenter_dataTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/dip_10"
    android:gravity="center_vertical"
    android:text="1990.06.06"
    android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/personalcenter_addrss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dip_1"
    android:background="@color/white">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dip_10"
    android:text="所在城市"
    android:textSize="@dimen/fond_16sp" />

    <TextView
    android:id="@+id/personalcenter_addr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/dip_10"
    android:gravity="center_vertical"
    android:text="辽宁省，沈阳市"
    android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dip_5"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:paddingLeft="@dimen/dip_10"
    android:paddingTop="@dimen/dip_5"
    android:text="简介"
    android:textSize="@dimen/fond_16sp" />

    <TextView
    android:id="@+id/personalcenter_jianjie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dip_10"
    android:background="#f0f0f0" />

    </LinearLayout>

</LinearLayout>
