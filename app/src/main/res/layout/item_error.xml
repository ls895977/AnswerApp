<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dip_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="建筑工程项目施工相关法规考试001"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/fond_14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:text="错题：11道"
                android:textColor="#ff3041"
                android:textSize="@dimen/fond_12sp" />

            <ImageView
                android:id="@+id/item_errorIm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_errorRclv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>