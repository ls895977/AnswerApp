<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/forgotpassword_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dip_10"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_80"
        android:src="@mipmap/icon_logintitle" />

    <EditText
        android:id="@+id/forgotpassword_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_60"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="用户名/手机号"
        android:inputType="number"
        android:maxLength="11"
        android:padding="@dimen/dip_5"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_register"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="111"
            android:background="@null" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_registeryanzhen"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_8"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/forgotpassword_pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="重新设置密码"
        android:inputType="textPassword"
        android:padding="@dimen/dip_5"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_16sp" />

    <EditText
        android:id="@+id/forgotpassword_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/boder_logon"
        android:gravity="center"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:padding="@dimen/dip_5"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_16sp" />

    <TextView
        android:id="@+id/forgotpassword_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_60"
        android:layout_marginRight="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/bt_login"
        android:gravity="center"
        android:padding="@dimen/dip_5"
        android:text="确定"
        android:textColor="@color/white"
        android:textColorHint="#cfcfcf"
        android:textSize="@dimen/fond_16sp" />

</LinearLayout>
