<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip_30"
    android:layout_marginRight="@dimen/dip_30"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bodyradius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/body_top"
            android:gravity="center"
            android:padding="@dimen/dip_10"
            android:text="温馨提示"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_18sp" />

        <TextView
            android:id="@+id/popup_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:textColor="@color/fond_cloer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popup_cancel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/body_buttom_left"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="取消"
                android:textColor="#167ffb" />

            <TextView
                android:id="@+id/popup_center"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/body_buttom_right"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="确定"
                android:textColor="#167ffb" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
