<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dip_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemRankingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ranking_boder"
            android:text="1"
            android:textColor="#333333"
            android:textSize="@dimen/fond_13sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_itemRankingList"
            android:layout_width="@dimen/dip_45"
            android:layout_height="@dimen/dip_45"
            android:layout_marginLeft="@dimen/dip_5"
            android:src="@mipmap/icon_homepaihang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip_10"
            android:text="我的大表哥"
            android:textColor="#383838"
            android:textSize="@dimen/fond_16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:text="100分"
        android:textColor="#ff1c15"
        android:textSize="@dimen/fond_18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:layout_alignParentBottom="true"
        android:background="#f4f4f4" />
</RelativeLayout>
